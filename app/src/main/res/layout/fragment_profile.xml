<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/tv_temp_min"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="온도"/>
    <TextView
        android:id="@+id/tv_temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp"
        android:layout_toLeftOf="@id/tv_temp_div"
        android:textColor="#000000"
        android:text="최저"/>
    <TextView
        android:id="@+id/tv_temp_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp"
        android:layout_toLeftOf="@id/tv_temp_max"
        android:textColor="#000000"
        android:text=" / "/>
    <TextView
        android:id="@+id/tv_temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="최고"/>

    <TextView
        android:id="@+id/tv_mylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 표시"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:layout_below="@id/iv"/>

    <Button
        android:id="@+id/profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:layout_above="@id/click_LogOut"/>
    <Button
        android:id="@+id/click_LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="로그아웃"/>

</RelativeLayout>