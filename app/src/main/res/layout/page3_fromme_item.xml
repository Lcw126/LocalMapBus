<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/iv_page3img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_page3nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_page3img"
            android:text="닉네임"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/tv_page3year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_page3nickname"
            android:text="나이"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/tv_page3local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_page3img"
            android:layout_below="@id/tv_page3nickname"
            android:text="지역"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>